{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "nestjs-i18n": ["src"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
